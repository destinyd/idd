<h1>Listing pages</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Introduction</th>
    <th>Content</th>
    <th>Path</th>
    <th>Status</th>
    <th>Published at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td><%= page.title %></td>
    <td><%= page.introduction %></td>
    <td><%= page.content %></td>
    <td><%= page.path %></td>
    <td><%= page.status %></td>
    <td><%= page.published_at %></td>
    <td><%= link_to 'Show', page %></td>
    <td><%= link_to 'Edit', edit_page_path(page) %></td>
    <td><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

