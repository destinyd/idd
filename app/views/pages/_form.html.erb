<%= simple_form_for(@page) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :introduction %>
    <%= f.input :content %>
    <%= f.input :path %>
    <%= f.input :status %>
    <%= f.input :published_at %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
