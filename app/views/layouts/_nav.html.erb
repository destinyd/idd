<% @c = @category || (@page || @post).try(:category) %>
<ul id="nav" class="nav_left">
  <!--  <li><%= link_to '首页', '/', class: 'a_root' %></li>-->
  <% Category.in_menu.root.each do |root| %>
    <li class=""><%= link_to root.name, root, class: 'a_root' %>
      <%  if root.categories.any?  %>
        <ul class="sub-menu ">
          <% root.categories.each do |l2| %>

            <li class="nav_l2">
              <%= link_to  l2.name, l2 %>
              <%  if l2.categories.any?  %>
                <ul>
                  <% l2.categories.each do |l3| %>
                    <li class="nav_l3">
                      <%= link_to l3.name, l3 %>
                    </li>
                  <% end -%>
                </ul>
              <% end if nil -%>
            </li>
          <% end -%>
        </ul>
      <% end -%>
    </li>
  <% end -%>
  <!--  <li>
    <%= link_to 'IDD治疗中心和合作关联医院', companies_path, class: "a_root" %>
  </li>-->
</ul>
<% if controller_name == 'home' %>
  <%= render "layouts/index_articles" %>
<% end %>
